<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-signin" }) do |f| %>
    <h2 class="form-signin-heading">Iniciar Session</h2>
    <%= f.email_field :email , :class=>"input-block-level", :placeholder=>"Email direccion", :type=>"text" %>
    <%= f.password_field :password, :class=>"input-block-level", :placeholder=>"Contraseña"%>
    <label class="checkbox">
      <% if devise_mapping.rememberable? -%>
          <div><%= f.check_box :remember_me %> <%= f.label :Recordar_Contraseña %></div>
      <% end -%>
    </label>
    <button class="btn btn-large btn-primary" type="submit"><i class="icon-lock icon-white"></i> Entrar</button>
    
<% end %>

